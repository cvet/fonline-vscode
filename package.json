{
	"name": "fonline-vscode",
	"displayName": "FOnline",
	"description": "FOnline VSCode Extension",
	"keywords": [
		"fonline"
	],
	"author": {
		"name": "cvet",
		"email": "cvet@tut.by",
		"url": "https://fonline.ru"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cvet/fonline-vscode.git"
	},
	"publisher": "cvet",
	"version": "0.1.1",
	"license": "MIT",
	"preview": true,
	"icon": "resources/radiation.png",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:fonline*.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "FOnline",
			"properties": {
				"fonline.path": {
					"type": "string",
					"description": "Path to the FOnline Engine repository",
					"scope": "machine-overridable"
				}
			}
		},
		"commands": [
			{
				"command": "extension.run",
				"title": "Run",
				"icon": {
					"light": "./resources/run.png",
					"dark": "./resources/run.png"
				}
			},
			{
				"command": "extension.compile",
				"title": "Compile",
				"icon": {
					"light": "./resources/compile.png",
					"dark": "./resources/compile.png"
				}
			},
			{
				"command": "extension.build",
				"title": "Build",
				"icon": {
					"light": "./resources/build.png",
					"dark": "./resources/build.png"
				}
			},
			{
				"command": "fileExplorer.refreshFile",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "fileExplorer.openFile",
				"title": "Open File"
			}
		],
		"keybindings": [
			{
				"command": "extension.compile",
				"key": "f6"
			},
			{
				"command": "extension.build",
				"key": "f7"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "extension.compile",
					"group": "navigation@-2",
					"when": "resourceExtname == .cpp"
				},
				{
					"command": "extension.build",
					"group": "navigation@-1",
					"when": "resourceExtname == .cpp || resourceExtname == .h"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "projectExplorer",
					"name": "Project Explorer"
				},
				{
					"id": "actionManager",
					"name": "Actions"
				}
			]
		}
	},
	"scripts": {
		"package": "vsce package",
		"publish": "vsce publish patch",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mkdirp": "^1.0.0",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.12.27",
		"@types/rimraf": "^2.0.3",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.19.2",
		"@typescript-eslint/parser": "^2.19.2",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"jqpropertygrid": "^1.0.0",
		"jquery": "^3.4.1",
		"jqueryui": "^1.11.1",
		"mkdirp": "^1.0.3",
		"rimraf": "^3.0.2",
		"uikit": "^3.3.1"
	},
	"extensionPack": [
		"twxs.cmake"
	]
}
